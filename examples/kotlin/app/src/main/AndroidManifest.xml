<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kotlin"
        tools:targetApi="31">
        <activity
            android:name=".app.AppActivity"
            android:exported="false" />
        <activity
            android:name=".app.weather.MainActivity"
            android:exported="false" />
        <activity
            android:name=".app.weather.ui.weather.WeatherActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ActivityActivity"
            android:exported="true" />
        <activity
            android:name=".activity.LifecycleObserverActivity"
            android:exported="true" />
        <activity
            android:name=".ui.UIActivity"
            android:exported="true" />
        <activity
            android:name=".ui.layout.LayoutActivity"
            android:exported="true" />
        <activity
            android:name=".ui.layout.LinearLayoutActivity"
            android:exported="true" />
        <activity
            android:name=".ui.layout.FrameLayoutActivity"
            android:exported="true" />
        <activity
            android:name=".ui.layout.RelativeLayoutActivity"
            android:exported="true" />
        <activity
            android:name=".state.StateActivity"
            android:exported="true" />
        <activity
            android:name=".state.ViewModelActivity"
            android:exported="true" />
        <activity
            android:name=".ui.layout.ConstraintLayoutActivity"
            android:exported="true" />
        <activity
            android:name=".ui.message.MessageActivity"
            android:exported="true" />
        <activity
            android:name=".ui.message.ToastActivity"
            android:exported="true" />
        <activity
            android:name=".ui.dialog.DialogActivity"
            android:exported="true" />
        <activity
            android:name=".resource.ResourceActivity"
            android:exported="true" />
        <activity
            android:name=".resource.ColorStateActivity"
            android:exported="true" />
    </application>

</manifest>
